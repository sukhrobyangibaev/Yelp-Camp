<% include ../partials/header %>

<div class="container">
    <h1 class="text-center">Edit comment to</h1>
    <div style="width: 40%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-info btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">All Campgrounds</a>
    </div>
</div>


<% include ../partials/footer %>